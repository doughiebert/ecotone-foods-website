                = hover_image_url 'nav/enviro'
            %li
              %a{href: cms_url('Nutritional Benefits')}
                = hover_image_url 'nav/nutri'
        %li
          %a{href: cms_url('Contact Us')}
            = hover_image_url 'nav/connect'
          %ul
            %li
              %a{href: cms_url('Contact Us')}
                = hover_image_url 'nav/contactus'
            %li
              %a{href: cms_url('Review Us')}
                = hover_image_url 'nav/reviewus'
        %li
          %a{href: cms_url('Online Store')}
            = hover_image_url 'nav/shop'
