!!!
%html
  %head
    = stylesheet_link_tag 'application'
    = requirejs_include_tag 'application'
    = favicon_link_tag '/favicon.ico'
  %body
    %a.header{href: cms_index_url }
    %nav
      %ul
        %li
          %a{href: cms_url('The Company')}
            = hover_image_url 'nav/aboutus'
          %ul
            %li
              %a{href: cms_url('The Company')}
                = hover_image_url 'nav/company'
            %li
              %a{href: cms_url('Meet the Crew')}
                = hover_image_url 'nav/crew'
            %li
              %a{href: cms_url('Kickstarter')}
                = hover_image_url 'nav/kickstarter'
            %li
              %a{href: cms_url('FAQ')}
                = hover_image_url 'nav/faq'
        %li
