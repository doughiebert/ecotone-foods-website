            %li
              %a{href: cms_url('Online Store')}
                = hover_image_url 'nav/onlinestore'
            %li
              %a{href: cms_url('Wholesale Inquiries')}
                = hover_image_url 'nav/wholesale'
            %li
              %a{href: cms_url('Store Locator')}
                = hover_image_url 'nav/locator'
        %li
          %a{href: cms_url('Pre-Order')}
            = hover_image_url 'nav/preorder'
        %li
          %a{href: cms_url('Cart')}
            = hover_image_url 'nav/cart'
        %li
          %a{href: cms_url('Checkout')}
            = hover_image_url 'nav/checkout'
                
    - unless @cms_page.ancestors.empty?
      %ul.breadcrumbs
        - (@cms_page.ancestors.reverse + [@cms_page]).each do |page|
          %li
            %a{href: page.url}
              = page.label.downcase
